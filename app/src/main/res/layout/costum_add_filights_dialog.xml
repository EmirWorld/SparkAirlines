<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed_name_of_destionation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ed_textarea"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="Name of destination"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ed_textarea"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/ed_name_of_destionation" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ed_name_of_destionation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="UPLOAD" />

</RelativeLayout>