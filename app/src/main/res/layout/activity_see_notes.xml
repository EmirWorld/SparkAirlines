<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_see"
    tools:context="world.emir.sparkairlines.SeeNotesActivity">


    <TextView
        android:id="@+id/note_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes name"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/notes_body"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/update_note_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/note_name_view"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:text="TextView" />

    <Button
        android:id="@+id/update_note_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:layout_above="@+id/remove_note_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/remove_note_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="REMOVE"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
