<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="world.emir.sparkairlines.UpdateNotesFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/note_name_ed_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Note Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/note_body_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/note_name_ed_update"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Note body"
        android:inputType="text" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_body_update"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/note_bnt_update"
        android:text="CLOSE" />

    <Button
        android:id="@+id/note_bnt_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/close"
        android:layout_alignBottom="@+id/close"
        android:layout_alignParentStart="true"
        android:layout_marginStart="103dp"
        android:text="UPDATE" />
</RelativeLayout>
