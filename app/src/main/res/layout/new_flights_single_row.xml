<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"

    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumb_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/flight_icon" />

        <TextView
            android:id="@+id/first_destination_txt"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/gap"
            android:layout_alignBottom="@+id/gap"
            android:layout_centerHorizontal="true"
            android:text="Bosnia"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/gap"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/first_destination_txt"
            android:text=" - "
            android:textSize="25dp" />


        <TextView
            android:id="@+id/second_destination_txt"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/gap"
            android:layout_alignBottom="@+id/gap"
            android:layout_toEndOf="@+id/gap"
            android:text="Bulgaria"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/prc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/first_destination_txt"
            android:layout_centerVertical="true"
            android:text="Price : "
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/price_of_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/prc"
            android:layout_toEndOf="@+id/prc"
            android:text="2555$"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/sadasd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Date : "
            android:textSize="15dp"
            android:layout_below="@+id/prc"
            android:layout_alignStart="@+id/prc" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29.3.1994"
            android:textSize="15dp"
            android:layout_alignBaseline="@+id/sadasd"
            android:layout_alignBottom="@+id/sadasd"
            android:layout_toEndOf="@+id/prc" />

        <Button
            android:id="@+id/booking_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/trans"
            android:text="Book now!"
            android:textColor="@color/colorPrimary"
            android:textSize="9dp" />

        <ImageButton
            android:id="@+id/pop_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/trans"
            android:src="@drawable/ic_feedback_black_24dp" />

        <TextView
            android:id="@+id/time"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H:M:S"
            android:layout_below="@+id/date"
            android:layout_alignStart="@+id/date" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTHOR"
            android:id="@+id/author"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/thumb_image" />


    </RelativeLayout>

</android.support.v7.widget.CardView>